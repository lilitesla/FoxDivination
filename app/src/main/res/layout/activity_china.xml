<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayoutMainStyle"
    tools:context="lili.tesla.foxdivination.presentation.screen.china.mainChina.view.ChinaActivity">

    <ScrollView
        style="@style/ScrollViewStyle">

             <LinearLayout
                android:id="@+id/ll_china"
                style="@style/MainLinearLayoutStyle">

                <ImageView
                    android:id="@+id/image_china"
                    android:background="@drawable/china"
                    style="@style/mainImageStyle"/>

                <TextView
                    android:id="@+id/textview_china_caption"
                    android:text="@string/china_caption"
                    style="@style/MainCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_china_description"
                    android:text="@string/china_description"
                    style="@style/MainDescriptionStyle"/>

                <LinearLayout
                    style="@style/LinLayImageButtonsStyle"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/main_ll_fatebook"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/button_fatebook"
                            style="@style/imageButtonStyle"
                            android:layout_gravity="center"
                            android:background="@drawable/fatebook"/>
                        <TextView
                            android:id="@+id/textview_fatebook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fate_book_main_caption"
                            android:textSize="11sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_ll_domino"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/button_domino"
                            style="@style/imageButtonStyle"
                            android:layout_gravity="center"
                            android:background="@drawable/domino"/>
                        <TextView
                            android:id="@+id/textview_domino"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/domino_caption"
                            android:textSize="11sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/main_ll_madjong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/button_madjong"
                            style="@style/imageButtonStyle"
                            android:layout_gravity="center"
                            android:background="@drawable/ekaterina_crown"/>
                        <TextView
                            android:id="@+id/textview_madjong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Маджонг"
                            android:textSize="11sp"
                            android:gravity="center"/>
                    </LinearLayout>


             </LinearLayout>

                 <ImageButton
                     android:id="@+id/button_china_back"
                     style="@style/buttonBackStyle" />

            </LinearLayout>

    </ScrollView>

</LinearLayout>
