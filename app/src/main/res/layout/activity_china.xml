<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray_blue_dark"
    android:layout_margin="5dp"
    tools:context="lili.tesla.foxdivination.presentation.screen.china.mainChina.view.ChinaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@color/background_gray_blue"
        >

        <ImageView
            android:id="@+id/image_china"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/china"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/textview_china_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/china_caption"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textview_china_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/china_description"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <Button
                style="@style/imageButtonStyle"
                android:background="@drawable/ekaterina_book"
                android:layout_margin="10dp"/>

            <Button
                style="@style/imageButtonStyle"
                android:background="@drawable/ekaterina_crown"
                android:layout_margin="10dp"/>

            <Button
                style="@style/imageButtonStyle"
                android:background="@drawable/ekaterina_crown"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_back"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

</ScrollView>
