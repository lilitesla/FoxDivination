<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayoutMainStyle"
    tools:context="lili.tesla.foxdivination.presentation.screen.china.domino.resultSeven.view.DominoResultSevenActivity">

    <ScrollView
        style="@style/ScrollViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_domino_result_seven_close"
                style="@style/buttonCloseStyle"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/ll_ekaterina_domino_result_seven"
                android:layout_below="@id/button_domino_result_seven_close"
                style="@style/LinearLayoutResultStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_domino_result_seven_1"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/domino_66"/>

                    <ImageView
                        android:id="@+id/image_domino_result_seven_2"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/domino_66"/>

                    <ImageView
                        android:id="@+id/image_domino_result_seven_3"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/domino_66"/>

                    <ImageView
                        android:id="@+id/image_domino_result_seven_4"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:background="@drawable/domino_66"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image_domino_result_seven_5"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/domino_66"/>

                    <ImageView
                        android:id="@+id/image_domino_result_seven_6"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:background="@drawable/domino_66"/>

                    <ImageView
                        android:id="@+id/image_domino_result_seven_7"
                        android:layout_width="50dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/domino_66"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_1"
                    android:text="@string/monday"
                    style="@style/textViewDominoCaptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_1"
                    style="@style/textviewDominoDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_2"
                    android:text="@string/tuesday"
                    style="@style/textViewDominoCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_2"
                    style="@style/textviewDominoDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_3"
                    android:text="@string/wednesday"
                    style="@style/textViewDominoCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_3"
                    style="@style/textviewDominoDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_4"
                    android:text="@string/thursday"
                    style="@style/textViewDominoCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_4"
                    style="@style/textviewDominoDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_5"
                    android:text="@string/friday"
                    style="@style/textViewDominoCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_5"
                    style="@style/textviewDominoDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_6"
                    android:text="@string/saturday"
                    style="@style/textViewDominoCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_6"
                    style="@style/textviewDominoDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_domino_result_seven_caption_7"
                    android:text="@string/sunday"
                    style="@style/textViewDominoCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_domino_result_seven_description_7"
                    style="@style/textviewDominoDescriptionStyle" />

                <ImageButton
                    android:id="@+id/button_domino_result_seven_back"
                    style="@style/buttonBackStyle" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>
