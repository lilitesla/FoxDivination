<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayoutMainStyle"
    tools:context="lili.tesla.foxdivination.presentation.screen.china.domino.resultThree.view.DominoResultThreeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray_blue">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_gray_blue">

            <ImageButton
                android:id="@+id/button_domino_result_three_close"
                style="@style/buttonCloseStyle" />

                <LinearLayout
                    android:id="@+id/ll_ekaterina_domino_result_three"
                    android:layout_below="@id/button_domino_result_three_close"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/image_domino_result_three_1"
                            android:layout_width="60dp"
                            android:layout_height="120dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/domino_66"/>

                        <ImageView
                            android:id="@+id/image_domino_result_three_2"
                            android:layout_width="60dp"
                            android:layout_height="120dp"
                            android:background="@drawable/domino_66"/>

                        <ImageView
                            android:id="@+id/image_domino_result_three_3"
                            android:layout_width="60dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/domino_66"/>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textview_domino_result_three_caption_1"
                        android:text="@string/past"
                        style="@style/textViewDominoCaptionStyle" />

                    <TextView
                        android:id="@+id/textview_domino_result_three_description_1"
                        style="@style/textviewDominoDescriptionStyle" />

                    <TextView
                        android:id="@+id/textview_domino_result_three_caption_2"
                        android:text="@string/present"
                        style="@style/textViewDominoCaptionStyle" />

                    <TextView
                        android:id="@+id/textview_domino_result_three_description_2"
                        style="@style/textviewDominoDescriptionStyle" />

                    <TextView
                        android:id="@+id/textview_domino_result_three_caption_3"
                        android:text="@string/perfect"
                        style="@style/textViewDominoCaptionStyle" />

                    <TextView
                        android:id="@+id/textview_domino_result_three_description_3"
                        style="@style/textviewDominoDescriptionStyle" />

                    <ImageButton
                        android:id="@+id/button_domino_result_three_back"
                        style="@style/buttonBackStyle"
                        android:layout_marginTop="20dp"/>

                </LinearLayout>

           </RelativeLayout>

    </ScrollView>
</LinearLayout>
