<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayoutMainStyle"
    tools:context="lili.tesla.foxdivination.presentation.screen.china.mainChina.view.ChinaActivity">

    <ScrollView
        style="@style/ScrollViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/button_fatebook_result_close"
                style="@style/buttonCloseStyle" />

            <LinearLayout
                android:id="@+id/ll_fatebook_result"
                android:layout_below="@id/button_fatebook_result_close"
                style="@style/LinearLayoutResultStyle">

                <LinearLayout
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/image_fatebook_result_line_6"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/fatebook_solid_line"
                        android:layout_marginBottom="5dp"/>

                    <ImageView
                        android:id="@+id/image_fatebook_result_line_5"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/fatebook_solid_line"
                        android:layout_marginBottom="5dp"/>

                    <ImageView
                        android:id="@+id/image_fatebook_result_line_4"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/fatebook_solid_line"
                        android:layout_marginBottom="15dp"/>

                    <ImageView
                        android:id="@+id/image_fatebook_result_line_3"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/fatebook_solid_line"
                        android:layout_marginBottom="5dp"/>

                    <ImageView
                        android:id="@+id/image_fatebook_result_line_2"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/fatebook_solid_line"
                        android:layout_marginBottom="5dp"/>

                    <ImageView
                        android:id="@+id/image_fatebook_result_line_1"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:background="@drawable/fatebook_solid_line"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/textview_fatebook_result_caption"
                    android:text="название"
                    style="@style/MainCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_fatebook_result_description"
                    android:text="результаты\nрезультаты\nрезультаты\nрезультаты\nрезультаты\nрезультаты\nрезультаты\nрезультаты\nрезультаты\n"
                    style="@style/MainDescriptionStyle"/>

                <ImageButton
                    android:id="@+id/button_fatebook_result_back"
                    style="@style/buttonBackStyle" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
