<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="lili.tesla.foxdivination.presentation.screen.zodiak.mainZodiak.view.MainZodiakActivity"
    style="@style/linearLayoutMainStyle">

    <ScrollView
        style="@style/ScrollViewStyle">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_main_zodiak_close"
                style="@style/buttonCloseStyle"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/ll_zodiak"
                android:layout_below="@id/button_main_zodiak_close"
                style="@style/LinearLayoutResultStyle">

                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/zodiac_background"/>

                    <ImageView
                        android:id="@+id/image_button_main_zodiak"
                        android:background="@drawable/zodiac_fish"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/textview_main_zodiak_caption"
                    android:text="@string/zodiak_caption"
                    style="@style/MainCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_main_zodiak_description"
                    style="@style/textviewDominoDescriptionStyle" />

                <ImageButton
                    android:id="@+id/button_main_zodiak_back"
                    android:layout_marginTop="20dp"
                    style="@style/buttonBackStyle" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>