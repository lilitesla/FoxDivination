<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayoutMainStyle"
    tools:context="lili.tesla.foxdivination.presentation.screen.tibet.mo_rosary.divination.view.MoRosaryDivinationActivity">

    <ScrollView
        style="@style/ScrollViewStyle">

        <LinearLayout
            android:id="@+id/ll_mo_rosary_divination"
            style="@style/MainLinearLayoutStyle">

            <ImageView
                android:id="@+id/image_mo_rosary_divination"
                android:background="@drawable/mo_rosary"
                style="@style/mainImageStyle"/>

            <TextView
                android:id="@+id/textview_mo_rosary_divination_manual"
                android:text="@string/mo_rosary_manual"
                style="@style/MainCaptionStyle"/>

            <RadioGroup
                android:id="@+id/radio_group_mo_rosary_divination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <RadioButton
                    android:id="@+id/rb_cha_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:text="бла бла бла"
                    />

                <RadioButton
                    android:id="@+id/rb_cha_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:text="бла бла бла"
                    />

                <RadioButton
                    android:id="@+id/rb_cha_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:text="бла бла бла"
                    />

                <RadioButton
                    android:id="@+id/rb_cha_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:text="бла бла бла"
                    />

                <RadioButton
                    android:id="@+id/rb_cha_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:text="бла бла бла"
                    />

                <RadioButton
                    android:id="@+id/rb_cha_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="16sp"
                    android:text="бла бла бла"
                    />



            </RadioGroup>

            <Button
                android:id="@+id/button_mo_rosary_divination_start"
                android:text="@string/button_show_prediction"
                android:layout_above="@+id/button_mo_rosary_divination_back"
                android:layout_centerHorizontal="true"
                style="@style/showResultButtonStyle"/>


            <ImageButton
                android:id="@+id/button_mo_rosary_divination_back"
                style="@style/buttonBackStyle" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
