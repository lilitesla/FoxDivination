<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/linearLayoutMainStyle"
    tools:context="lili.tesla.foxdivination.presentation.screen.zodiak.compatibility.result.view.ResultCompatibilityZodiakActivity">

    <ScrollView
        style="@style/ScrollViewStyle">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/button_compatibility_zodiak_close"
                style="@style/buttonCloseStyle"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:id="@+id/ll_compatibility_zodiak"
                android:layout_below="@id/button_compatibility_zodiak_close"
                style="@style/LinearLayoutResultStyle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/zodiac_background"/>

                        <ImageView
                            android:id="@+id/image_compatibility_zodiak_man"
                            android:background="@drawable/zodiac_fish"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/zodiac_background"/>

                        <ImageView
                            android:id="@+id/image_compatibility_zodiak_woman"
                            android:background="@drawable/zodiac_fish"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_caption"
                    android:text="Заголовок"
                    style="@style/textViewZodiacCompatibilityCaptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_description"
                    style="@style/textviewZodiacCompatibilityDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_caption_1"
                    android:text="Заголовок"
                    style="@style/textViewZodiacCompatibilityCaptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_description_1"
                    style="@style/textviewZodiacCompatibilityDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_caption_2"
                    android:text="Заголовок"
                    style="@style/textViewZodiacCompatibilityCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_description_2"
                    style="@style/textviewZodiacCompatibilityDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_caption_3"
                    android:text="Заголовок"
                    style="@style/textViewZodiacCompatibilityCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_description_3"
                    style="@style/textviewZodiacCompatibilityDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_caption_4"
                    android:text="Заголовок"
                    style="@style/textViewZodiacCompatibilityCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_description_4"
                    style="@style/textviewZodiacCompatibilityDescriptionStyle" />

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_caption_5"
                    android:text="Заголовок"
                    style="@style/textViewZodiacCompatibilityCaptionStyle"/>

                <TextView
                    android:id="@+id/textview_compatibility_zodiak_description_5"
                    style="@style/textviewZodiacCompatibilityDescriptionStyle" />

                <ImageButton
                    android:id="@+id/button_compatibility_zodiak_back"
                    style="@style/buttonBackStyle" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>
